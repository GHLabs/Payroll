@model Payroll.Models.Employee.EmployeeViewModel

@{
    ViewBag.Title = "Edit Employee";
}

<h2>Edit Employee</h2>


@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr />
        
        @if ((!ViewData.ModelState.IsValid))
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(true)
            </div>
        }


        @Html.HiddenFor(model => model.EmployeeId)
        
        <div class="col-md-7">

            <div class="form-group">
                @Html.LabelFor(model => model.EmployeeCode, "Card Number", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EmployeeCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EmployeeCode)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MiddleName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DisplayBirthDate, new { @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(model => model.DisplayBirthDate)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <label for="Files">Change Picture</label>
            <img src="@Url.Content(Model.Picture ?? "~/Images/noimage.jpg")" class="img-responsive"/>
            <input type="file" name="Files" id="Files" class="hidden"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
