@using Payroll.Extension
@model Payroll.Entities.Holiday

@{
    ViewBag.Title = "CreateHoliday";
}

<h2>Create new holiday for this year</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Holiday</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.HolidayName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.HolidayName, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.HolidayName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsRegularHoliday, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.IsRegularHoliday)
                @Html.ValidationMessageFor(model => model.IsRegularHoliday)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DatePickerFor("Date", DateTime.Now, new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Holiday")
</div>
