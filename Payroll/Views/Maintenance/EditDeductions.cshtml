@model Payroll.Entities.Payroll.Deduction

@{
    ViewBag.Title = "Edit Deduction";
}

<h2>Edit Deduction</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Deduction</h4>
        <hr />
        
        @Html.HiddenFor(model => model.DeductionId)
        <div class="form-group">
            @Html.LabelFor(model => model.DeductionName, "Deduction Name",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DeductionName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeductionName)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", rows = 8 })
                @Html.ValidationMessageFor(model => model.Remarks)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Deductions")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}